<div class="row justify-content-center">

	<div class="col-md-6" style="border: 3px solid blue;">
		<h2>
			Edit Profile
		</h2>

		<form class="form edit-profile-form" data-id="{{user_id}}">
			<div class="form-group pb-2">
				<label for="first-name-edit">First Name:</label>
				<input
					class="form-input text-center"
					type="text"
					id="first-name-edit"
					value={{first_name}}
					required
				/>
			</div>
			<div class="form-group pb-2">
				<label for="last-name-edit">Last Name:</label>
				<input
					class="form-input text-center"
					type="text"
					id="last-name-edit"
					value={{last_name}}
					required
				/>
			</div>
			<div class="form-group pb-2">
				<label for="weight-edit">Weight (In KG):</label>
				<input
					class="form-input text-center"
					type="text"
					value={{weight}}
					id="weight-edit"
					required
				/>
			</div>
			<div class="form-group pb-2">
				<label for="height-edit">Age:</label>
				<input
					class="form-input text-center"
					type="text"
					id="age-edit"
					value={{age}}
					required
				/>
			</div>
			<div class="form-group">
				<button class="btn btn-primary" type="submit">Edit Profile</button>
			</div>
		</form>

	</div>

</div>

<script src="/js/profile.js"></script>